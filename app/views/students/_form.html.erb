
<%= form_for @student do |f| %>

<ul>
  <% @student.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :surname %>
  <%= f.text_field :surname %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.submit (@student.new_record? ? "Create" : "Update") %>
<% end %>
