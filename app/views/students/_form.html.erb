
<%= form_for @student do |f| %>

<ul>
  <% @student.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

  <%= f.label :first_name %>


<%= f.select(:first_name, options_for_select(["Bert", "Ann", "Marga"])) %>


  <%= f.label :surname %>
  <%= f.text_field :surname %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :batch_id %>
  <%= f.collection_select(:batch_id, Batch.all, :id, :batch_number) %>

  <%= f.submit (@student.new_record? ? "Create" : "Update") %>
<% end %>
