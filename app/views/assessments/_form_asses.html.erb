


<div class="col-md-6">


  <%= form_for @assessment do |f| %>

  <ul>
    <% @assessment.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>


  <div class="form-group">
    <div class="row">
      <div class="col-md-2">

        <%= f.label :colour %>

      </div>

      <div class="col-md-2">

        <%= f.select(:colour, options_for_select(["Red", "Yellow", "Green"], "Green")) %>

      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">

        <%=  f.label :date %>

      </div>

      <div class="col-md-2">

        <%= f.date_select :date, id: :assessment_date %>

      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">

        <%= f.label :comment %>

      </div>

      <div class="col-md-2">

        <%= f.text_area :comment %>

      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">

        <%= f.label :student_id %>

      </div>

      <div class="col-md-2">
          <%= f.collection_select(:student_id, Student.all, :id, :first_name) %>


      </div>
    </div>
  </div>

  <div class="actions">

    <%= f.submit (@assessment.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'Back', :back, class:'btn btn-default' %>

  </div>
</div>
